pipeline {
	agent any
	stages {
		stage('Checkout') {
			steps {
				echo 'Checking out code'
				checkout scm
			}
		}
        stage('Build') { 
			agent { 
				docker {
					image 'python:3.11.0-slim-buster'
				}
			}
            steps {
				sh 'apt update && apt install libmariadb-dev -y'
                sh 'pip install --no-cache-dir -r src/requirements.txt' 
				sh 'pip install pytest'
				sh 'pytest jenkins/scripts/loginTest.py'
            }
        }
		stage('OWASP Dependency-Check'){
			steps {
				dependencyCheck additionalArguments: '--scan "src/" --format HTML --format XML', odcInstallation: '3x03_FMS'
			}
		}
    }
	post {
		success {
			dependencyCheckPublisher pattern: 'dependency-check-report.xml'
		}
	}
}